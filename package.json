{
  "name": "credit-card-validator",
  "version": "1.0.0",
  "description": "A credit card validator widget",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "webpack-dev-server --mode development",
    "build": "webpack --mode production",
    "lint": "eslint . --fix",
    "test": "jest --testPathPattern=src/js/__tests__/ --env=jsdom",
    "coverage": "jest --testPathPattern=src/js/__tests__/ --coverage --env=jsdom",
    "e2e": "jest --testPathPattern=e2e/ --runInBand",
    "doc": "jsdoc -c jsdoc.conf.json",
    "preshow:coverage": "yarn jest --coverage",
    "show:coverage": "live-server coverage/lcov-report",
    "preshow:doc": "yarn run doc",
    "show:doc": "live-server doc",
    "preshow:dist": "yarn build",
    "show:dist": "live-server dist"
  },
  "author": "Shustovskikh <python.shustovskikh@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.24.8",
    "@babel/core": "^7.24.9",
    "@babel/preset-env": "^7.24.8",
    "@eslint/eslintrc": "^3.1.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^8.2.3",
    "css-loader": "^6.5.1",
    "eslint": "8",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "2",
    "file-loader": "^6.2.0",
    "html-loader": "^3.1.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-puppeteer": "^10.0.1",
    "jsdoc": "^3.6.3",
    "live-server": "^1.2.1",
    "mini-css-extract-plugin": "^2.5.3",
    "puppeteer": "^22.13.1",
    "webpack": "^5.67.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.3"
  },
  "dependencies": {
    "core-js": "^3.37.1"
  },
  "resolutions": {
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0"
  }
}
